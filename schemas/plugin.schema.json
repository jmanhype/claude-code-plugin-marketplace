{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claude Code Plugin Manifest",
  "description": "Schema for validating plugin.json files with security and supply-chain enforcement",
  "type": "object",
  "required": ["name", "displayName", "version", "description", "license"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9-]{3,64}$",
      "description": "Plugin identifier (lowercase, alphanumeric + hyphens)"
    },
    "displayName": {
      "type": "string",
      "minLength": 3,
      "maxLength": 100,
      "description": "Human-readable plugin name"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., 1.0.0)"
    },
    "description": {
      "type": "string",
      "minLength": 20,
      "maxLength": 2000,
      "description": "Plugin description"
    },
    "author": {
      "type": "string",
      "description": "Author name or GitHub username"
    },
    "license": {
      "type": "string",
      "description": "License identifier (e.g., MIT, Apache-2.0)"
    },
    "repository": {
      "type": "string",
      "format": "uri",
      "description": "GitHub repository URL"
    },
    "permissions": {
      "type": "object",
      "description": "Requested permissions (new security feature)",
      "properties": {
        "filesystem": {
          "type": "boolean",
          "description": "Read/write local files"
        },
        "network": {
          "type": "boolean",
          "description": "Make network requests"
        },
        "exec": {
          "type": "boolean",
          "description": "Execute shell commands"
        },
        "env": {
          "type": "boolean",
          "description": "Access environment variables"
        },
        "trading": {
          "enum": ["none", "paper", "live"],
          "description": "Trading mode: none, paper, or live (requires approval)"
        }
      },
      "additionalProperties": false
    },
    "agents": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "source"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "source": {
            "type": "string",
            "description": "URL (must be pinned to commit SHA) or relative path"
          },
          "integrity": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$",
            "description": "SHA-256 hash for remote sources (mandatory for URLs with commit refs)"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "hooks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type", "source"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "enum": ["pre_run", "post_run", "on_error", "manual"],
            "description": "Hook trigger type"
          },
          "source": {
            "type": "string",
            "description": "URL (must be pinned) or relative path to hook script"
          },
          "integrity": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$",
            "description": "SHA-256 hash for remote sources"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "commands": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "source"],
        "properties": {
          "name": {"type": "string"},
          "source": {"type": "string"},
          "integrity": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
          "description": {"type": "string"}
        }
      }
    },
    "workflows": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "source"],
        "properties": {
          "name": {"type": "string"},
          "source": {"type": "string"},
          "integrity": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
          "description": {"type": "string"}
        }
      }
    },
    "mcp": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "source"],
        "properties": {
          "name": {"type": "string"},
          "source": {"type": "string"},
          "integrity": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
          "description": {"type": "string"}
        }
      }
    },
    "helpers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "source"],
        "properties": {
          "name": {"type": "string"},
          "source": {"type": "string"},
          "integrity": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
          "description": {"type": "string"}
        }
      }
    },
    "tags": {
      "type": "array",
      "items": {"type": "string"}
    },
    "category": {
      "type": "string",
      "description": "Primary category (e.g., trading, testing, automation)"
    },
    "homepage": {
      "type": "string",
      "format": "uri"
    },
    "documentation": {
      "type": "string",
      "format": "uri"
    },
    "screenshots": {
      "type": "array",
      "items": {"type": "string"}
    },
    "dependencies": {
      "type": "array",
      "items": {"type": "string"}
    },
    "configuration": {
      "type": "object",
      "properties": {
        "required": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        },
        "optional": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        },
        "riskConfigPath": {
          "type": "string",
          "description": "Path to risk config JSON (for trading plugins)"
        },
        "promptPath": {
          "type": "string",
          "description": "Path to canonical prompt (for LLM plugins)"
        }
      }
    }
  },
  "additionalProperties": true
}
