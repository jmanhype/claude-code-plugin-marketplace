{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://claude.com/schemas/ace/bullet.schema.json",
  "title": "ACE Bullet Schema",
  "description": "Schema for Agentic Context Engineering playbook bullets",
  "type": "object",
  "required": ["id", "title", "content", "tags"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^bullet-[0-9]{4}-[0-9]{2}-[0-9]{2}-[0-9]{3}$",
      "description": "Stable unique identifier in format: bullet-YYYY-MM-DD-NNN",
      "examples": ["bullet-2025-10-25-001"]
    },
    "title": {
      "type": "string",
      "minLength": 5,
      "maxLength": 100,
      "description": "Purpose-centric title describing what the bullet addresses"
    },
    "content": {
      "type": "string",
      "minLength": 20,
      "description": "Detailed, atomic guidance. Must be specific and actionable, avoiding generic advice."
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9._-]+$"
      },
      "minItems": 1,
      "uniqueItems": true,
      "description": "Hierarchical tags for retrieval (e.g., 'tool.bash.retry', 'api.github.ratelimit')"
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "ref"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["execution", "validation", "user_feedback", "test_result", "error_log", "documentation", "low_confidence"],
            "description": "Type of evidence supporting this bullet"
          },
          "ref": {
            "type": "string",
            "description": "Reference to evidence (file path, commit SHA, task ID, URL)"
          },
          "note": {
            "type": "string",
            "description": "Additional context about the evidence"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "When evidence was collected"
          }
        }
      },
      "default": [],
      "description": "Evidence grounding this bullet in execution reality"
    },
    "helpful_count": {
      "type": "integer",
      "minimum": 0,
      "default": 0,
      "description": "Number of times this bullet contributed to successful outcomes"
    },
    "harmful_count": {
      "type": "integer",
      "minimum": 0,
      "default": 0,
      "description": "Number of times this bullet led to errors or inefficiency"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 timestamp of last modification"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 timestamp of creation"
    },
    "links": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [],
      "description": "Related bullet IDs or external documentation URLs"
    },
    "confidence": {
      "type": "string",
      "enum": ["high", "medium", "low"],
      "default": "medium",
      "description": "Confidence level based on evidence strength"
    },
    "scope": {
      "type": "string",
      "enum": ["global", "project", "domain", "temporary"],
      "default": "global",
      "description": "Applicability scope of this bullet"
    },
    "prerequisites": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [],
      "description": "Bullet IDs that should be considered before this one"
    },
    "author": {
      "type": "string",
      "enum": ["agent", "human", "collaborative"],
      "default": "agent",
      "description": "Who created this bullet"
    },
    "status": {
      "type": "string",
      "enum": ["active", "deprecated", "archived", "under_review"],
      "default": "active",
      "description": "Current status of this bullet"
    },
    "deprecation_reason": {
      "type": "string",
      "description": "Reason for deprecation if status is deprecated"
    }
  },
  "additionalProperties": false
}
